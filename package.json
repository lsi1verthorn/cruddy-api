{
  "name": "cruddy-api",
  "version": "1.0.0",
  "description": "Basic CRUD api for rudimentary postgres db",
  "main": "app.js",
  "scripts": {
    "build": "pnpm install",
    "dev": "node app.js",
    "lint": "eslint .",
    "prepare": "husky install",
    "test:mocha-app": "mocha __tests__/app.test.js",
    "test:jest-rest": "jest --testMatch \"**/*.test.[jt]s\" --testPathIgnorePatterns \"<rootDir>/__tests__/app.test.js\"",
    "test": "pnpm run test:mocha-app && pnpm run test:jest-rest"
  },
  "keywords": [
    "CRUD api",
    "express",
    "postgres"
  ],
  "author": "Linda Silverthorn",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "pg": "^8.16.0",
    "pnpm": "^10.11.1",
    "semver": "^7.7.2",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "sqlite3"
    ],
    "onlyBuiltDependencies": [
      "sqlite3"
    ]
  },
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/supertest": "^6.0.3",
    "assert": "^2.1.0",
    "chai": "^5.2.0",
    "eslint": "^9.28.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "mocha": "^11.5.0",
    "proxyquire": "^2.1.3",
    "supertest": "^7.1.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  }
}
